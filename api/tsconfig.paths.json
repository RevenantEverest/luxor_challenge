{
    "compilerOptions": {
        "baseUrl": "./src",                                  /* Specify the base directory to resolve non-relative module names. */
        "paths": {                                           /* Specify a set of entries that re-map imports to additional lookup locations. */
            "@@root/*": ["./*"],
            "@@constants/*": ["./constants/*"],
            "@@controllers/*": ["./controllers/*"],
            "@@db/*": ["./db/*"],
            "@@entities/*": ["./entities/*"],
            "@@factories/*": ["./factories/*"],
            "@@middleware/*": ["./middleware/*"],
            "@@routes/*": ["./routes/*"],
            "@@schemas/*": ["./schemas/*"],
            "@@services/*": ["./services/*"],
            "@@types/*": ["./types/*"],
            "@@utils/*": ["./utils/*"],
            "@@tests/support/*": ["./__tests__/support/*"],
            "@@tests/integration/*": ["./__tests__/integration/*"]
        }
    }
}